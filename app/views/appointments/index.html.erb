<p id="notice"><%= notice %></p>

<h1>Listing Appointments</h1>

<table>
  <thead>
    <tr>
      <th>Companie</th>
      <th>Provider service</th>
      <th>Client</th>
      <th>Title</th>
      <th>Start</th>
      <th>End</th>
      <th>All day</th>
      <th>Obs</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.companie_id %></td>
        <td><%= appointment.provider_service_id %></td>
        <td><%= appointment.client_id %></td>
        <td><%= appointment.title %></td>
        <td><%= appointment.start %></td>
        <td><%= appointment.end %></td>
        <td><%= appointment.all_day %></td>
        <td><%= appointment.obs %></td>
        <td><%= appointment.price %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

