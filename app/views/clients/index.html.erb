<p id="notice"><%= notice %></p>

<h1>Listing Clients</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.email %></td>
        <td><%= client.phone %></td>
        <td>
          <div class="btn-group btn-group-sm" role="group">
            <%= link_to 'Edit', edit_client_path(client), :class => 'btn btn-default', :role => 'button' %>
            <%= link_to 'Show', client, :class => 'btn btn-default', :role => 'button' %>
            <%= link_to 'Destroy', client, :class => 'btn btn-danger', :role => 'button', method: :delete, data: {confirm: 'Are you sure?'} %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

