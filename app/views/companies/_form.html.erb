<%= form_for(@company) do |f| %>
  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% @company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, :class => 'form-control', placeholder: 'Ex: Salão do Mario' %>
  </div>


  <div class="form-group">
    <%= f.label :slogan %><br>
    <%= f.text_area :slogan, :class => 'form-control' %>
  </div>
    <div class="form-group">
    <%= f.label :website %><br>
    <%= f.text_field :website, :class => 'form-control', placeholder: 'Ex: www.website.com.br' %>
    </div>

  <div class="form-group">
    <%= f.label :phone %><br>
    <%= f.text_field :phone, :class => 'form-control', placeholder: 'Ex: 04535457879' %>
  </div>

  <div class="form-group">
    <%= f.label :logo %><br>

    <%= image_tag(@company.logo.thumb.url) unless @company.logo.file.nil? %>

    <%= f.file_field :logo, :class => 'form-control' %>
    <%= f.check_box :remove_logo %> <%= t :remove %>
  </div>

  <div class="form-group">
    <%= f.label :street %><br>
    <%= f.text_field :street, :class => 'form-control', placeholder: 'Ex: Rua Barão, 248, Centro' %>
  </div>
    <div class="form-group">
    <%= f.label :city %><br>
    <%= f.text_field :city, :class => 'form-control', placeholder: 'Ex: Curitiba, Paraná' %>
  </div>
    <div class="form-group">
      <%= f.label :schedule_interval %><br>
      <%=  f.select :schedule_interval, options_for_select([
                                           ["5 min", 5*60],
                                           ["10 min", 10*60],
                                           ["15 min", 15*60],
                                           ["20 min", 20*60],
                                           ["30 min", 30*60],
                                           ["40 min", 40*60],
                                           ["50 min", 50*60],
                                           ["1h", 60*60],
                                           ["1h20m", 80*60]
                                   ], selected: @company.schedule_interval

                             )%>
    </div>
    <div class="form-group">
      <%= f.label :min_antecedence %><br>
      <%=  f.select :min_antecedence, options_for_select([
                                                                   ["20min", 20*60],
                                                                   ["40min", 40*60],
                                                                   ["1h", 1*60*60],
                                                                   ["2h", 2*60*60],
                                                                   ["3h", 3*60*60],
                                                                   ["4h", 4*60*60],
                                                                   ["6h", 6*60*60],
                                                                   ["8h", 8*60*60],
                                                                   ["1d", 1*60*60*24],
                                                                   ["2d", 2*60*60*24],
                                                                   ["4d", 4*60*60*24],
                                                                   ["10d", 10*60*60*24],
                                                                   ["15d", 15*60*60*24],
                                                                   ["30d", 30*60*60*24]
                                                           ], selected: @company.min_antecedence

                                      )%>
    </div>
    <div class="form-group">
      <%= f.label :max_antecedence %><br>
      <%=  f.select :max_antecedence, options_for_select([
                                                                 ["1h", 1*60*60],
                                                                 ["2h", 2*60*60],
                                                                 ["3h", 3*60*60],
                                                                 ["4h", 4*60*60],
                                                                 ["6h", 6*60*60],
                                                                 ["8h", 8*60*60],
                                                                 ["1d", 1*60*60*24],
                                                                 ["2d", 2*60*60*24],
                                                                 ["4d", 4*60*60*24],
                                                                 ["10d", 10*60*60*24],
                                                                 ["15d", 15*60*60*24],
                                                                 ["30d", 30*60*60*24],
                                                                 ["40d", 40*60*60*24],
                                                                 ["60d", 60*60*60*24],
                                                                 ["90d", 90*60*60*24],
                                                           ], selected: @company.max_antecedence

                                      )%>
    </div>
    <div class="actions">
      <%= f.submit :class => 'btn btn-primary' %>
    </div>
<% end %>
