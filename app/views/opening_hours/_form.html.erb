<%= form_for(@opening_hour) do |f| %>
  <% if @opening_hour.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@opening_hour.errors.count, "error") %> prohibited this opening_hour from being saved:</h2>

      <ul>
      <% @opening_hour.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :company_id %><br>
    <%= f.number_field :company_id %>
  </div>

  <div class="field">
    <%= f.label :weekdays %><br>
    <% Date::DAYNAMES.each_with_index do |day, index| %>
        <%= check_box_tag "opening_hour[weekdays][]", index, @opening_hour.weekdays.nil? ? false : @opening_hour.weekdays.include?(index.to_s) %>
        <%= t day %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :from %><br>
    <%= f.time_select :from %>
  </div>
  <div class="field">
    <%= f.label :to %><br>
    <%= f.time_select :to %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

