<div class="page-header">
  <h1>Você está a um passo de revolucionar os agendamentos do seu negócio ;) <small></small></h1>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.fields_for :company, resource.company ||= resource.build_company do |c| %>

    <div class="form-group">
      <%= c.label :name %><br>
      <%= c.text_field :name, autofocus: true, class: 'form-control' %>
    </div>

  <% end %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres no mínimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  </div>


  <div class="actions">
    <%= f.submit "Criar minha conta", class: 'btn btn-success' %>
  </div>
<% end %>
